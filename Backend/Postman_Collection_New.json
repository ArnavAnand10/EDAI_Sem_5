  "item": [
    {
      "name": "1. SETUP - Register Users",
      "item": [
        {
          "name": "1.1 Register Employee",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('employeeToken', response.token);",
                  "    pm.collectionVariables.set('employeeId', response.user.employee.id);",
                  "    console.log('Employee Token:', response.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"john.employee@company.com\",\n  \"password\": \"password123\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"department\": \"Engineering\",\n  \"position\": \"Software Engineer\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            },
            "description": "Register a new employee (default role: EMPLOYEE)"
          }
        },
        {
          "name": "1.2 Register Manager",
          "event": [
