    {
      "name": "4. EMPLOYEE - Self Rating",
      "item": [
        {
          "name": "4.1 Get My Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{employeeToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/employees/me",
              "host": ["{{baseUrl}}"],
              "path": ["employees", "me"]
            }
          }
        },
        {
          "name": "4.2 View Available Skills (Public)",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/skills",
              "host": ["{{baseUrl}}"],
              "path": ["skills"]
            },
            "description": "Anyone can view available skills without authentication"
          }
        },
        {
          "name": "4.3 Self-Rate JavaScript (4/5)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('ratingId', response.id);",
                  "    console.log('Rating ID:', response.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{employeeToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"skillId\": {{skillId}},\n  \"selfRating\": 4,\n  \"selfComments\": \"I have 3 years of experience with JavaScript. I'm comfortable with ES6+ features, async programming, and modern frameworks.\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/ratings/self-rate",
              "host": ["{{baseUrl}}"],
              "path": ["ratings", "self-rate"]
            },
            "description": "Employee rates themselves on a skill (1-5 scale)"
          }
        },
        {
          "name": "4.4 View My Skill Ratings",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{employeeToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/ratings/my-ratings",
              "host": ["{{baseUrl}}"],
              "path": ["ratings", "my-ratings"]
            },
            "description": "Employee views all their skill ratings"
          }
        }
