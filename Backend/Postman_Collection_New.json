            "body": {
              "mode": "raw",
              "raw": "{\n  \"hrId\": {{hrId}}\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/admin/employees/{{employeeId}}/assign-hr",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "employees", "{{employeeId}}", "assign-hr"]
            }
          }
        },
        {
          "name": "2.5 Get System Stats",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/stats",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "stats"]
            },
            "description": "Admin views system statistics"
          }
        },
        {
          "name": "2.6 Get All Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/admin/users",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "users"]
            },
            "description": "Admin views all users with roles and employee details"
          }
        }
      ]
    },
    {
      "name": "3. HR - Skill Management",
      "item": [
        {
          "name": "3.1 Create Skill - JavaScript",
