    },
    {
      "name": "5. MANAGER - Approval Workflow",
      "item": [
        {
          "name": "5.1 Get Pending Skill Approvals",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{managerToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/ratings/pending",
              "host": ["{{baseUrl}}"],
              "path": ["ratings", "pending"]
            },
            "description": "Manager views pending skill ratings from direct reports"
          }
        },
        {
          "name": "5.2 Approve Rating (Keep Same Rating)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{managerToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"managerStatus\": \"APPROVED\",\n  \"managerComments\": \"I agree with this assessment. John has demonstrated strong JavaScript skills.\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/ratings/approve/{{ratingId}}",
              "host": ["{{baseUrl}}"],
              "path": ["ratings", "approve", "{{ratingId}}"]
            },
            "description": "Manager approves the employee's self-rating"
          }
        },
        {
          "name": "5.3 Approve with Changed Rating",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{managerToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"managerStatus\": \"APPROVED\",\n  \"managerRating\": 3,\n  \"managerComments\": \"Good progress, but I think a 3/5 is more accurate based on project work. Let's work on advanced concepts.\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/ratings/approve/{{ratingId}}",
              "host": ["{{baseUrl}}"],
              "path": ["ratings", "approve", "{{ratingId}}"]
            },
            "description": "Manager changes the rating and approves"
          }
        },
        {
          "name": "5.4 Reject Rating",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{managerToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"managerStatus\": \"REJECTED\",\n  \"managerComments\": \"Please provide more specific examples of your JavaScript work before re-submitting.\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/ratings/approve/{{ratingId}}",
              "host": ["{{baseUrl}}"],
              "path": ["ratings", "approve", "{{ratingId}}"]
            },
            "description": "Manager rejects the skill rating"
          }
        },
        {
          "name": "5.5 View Team Skill Ratings",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{managerToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/ratings/team",
              "host": ["{{baseUrl}}"],
              "path": ["ratings", "team"]
            },
            "description": "Manager views all skill ratings for team members"
          }
        },
        {
          "name": "5.6 Get My Direct Reports",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{managerToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/employees",
              "host": ["{{baseUrl}}"],
              "path": ["employees"]
            },
            "description": "Manager views all their direct reports with employee data"
          }
        }
