    {
      "name": "2. ADMIN - Assign Roles & Hierarchy",
      "item": [
        {
          "name": "2.1 Change User to MANAGER Role",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"role\": \"MANAGER\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/admin/users/{{managerId}}/role",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "users", "{{managerId}}", "role"]
            },
            "description": "Admin changes a user's role to MANAGER"
          }
        },
        {
          "name": "2.2 Change User to HR Role",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"role\": \"HR\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/admin/users/{{hrId}}/role",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "users", "{{hrId}}", "role"]
            }
          }
        },
        {
          "name": "2.3 Assign Manager to Employee",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"managerId\": {{managerId}}\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/admin/employees/{{employeeId}}/assign-manager",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "employees", "{{employeeId}}", "assign-manager"]
            },
            "description": "Admin assigns a manager to an employee"
          }
        },
        {
          "name": "2.4 Assign HR to Employee",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
